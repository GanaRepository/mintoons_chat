# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mintoons?retryWrites=true&w=majority
MONGODB_DB_NAME=mintoons

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-here-32-chars-min

# AI Providers (stored securely in backend)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_AI_API_KEY=your-google-ai-key-here

# Stripe Payment Gateway
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (update when changing subscription tiers)
STRIPE_BASIC_PRICE_ID=price_basic_monthly
STRIPE_PREMIUM_PRICE_ID=price_premium_monthly
STRIPE_PRO_PRICE_ID=price_pro_monthly

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@mintoons.com
FROM_NAME=Mintoons Team

# Security & Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
JWT_SECRET=your-jwt-secret-for-password-reset

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Age Restrictions & COPPA Compliance
MIN_AGE=2
MAX_AGE=18
COPPA_AGE_LIMIT=13

# Environment
NODE_ENV=development
APP_URL=http://localhost:3000

# Socket.io Configuration (optional customization)
SOCKET_IO_PATH=/api/socket
SOCKET_IO_CORS_ORIGIN=http://localhost:3000